root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs}]
indent_style = space
indent_size = 4

[*.{ts,tsx,js,jsx,json,html,css,scss,sass,less}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{sln,csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_style = tab